<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_two_start_color" />
            <corners android:radius="200dp" />
            <stroke android:color="@color/main_background_color" android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/btn_two_end_color" android:startColor="@color/btn_two_start_color" />
            <corners android:radius="200dp" />
        </shape>

    </item>
</selector>